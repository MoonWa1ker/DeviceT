<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/informationString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="95dp"
        android:text="@string/informationString" />

    <TextView
        android:id="@+id/responseString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/informationString"
        android:layout_below="@+id/informationString"
        android:layout_marginTop="126dp"
        android:ems="10"
        android:text="@string/responseString" />

</RelativeLayout>
